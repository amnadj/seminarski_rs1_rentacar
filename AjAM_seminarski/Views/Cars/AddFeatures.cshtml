@model List<AjAM_seminarski.ViewModel.FeaturesViewModel>

@{
    ViewData["Title"] = "AddFeatures";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-3 mb-3">

    <h1>AddFeatures - Yes</h1>
    @using (Html.BeginForm("InsertNewFeatures", "Cars", FormMethod.Post))
    {
    <form method="post">

        <div class="card mb-2 mt-2">
            <div class="card-header">
                <h2>Select features</h2>
            </div>
            <div class="card-body">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model[i].Id" />
                        <input type="hidden" asp-for="@Model[i].Name" />
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label asp-for="@Model[i].IsSelected">
                            @Model[i].Name
                        </label>
                        <input type="hidden" asp-for="@Model[i].CarId"/>
                    </div>
                }
            </div>
            <div class="card-footer">
                <input type="submit" value="Update" class="btn btn-primary" style="width:auto">
                <a asp-action="Index" class="btn btn-outline-dark">Back to List</a>

            </div>
        </div>
    </form>
    }

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
