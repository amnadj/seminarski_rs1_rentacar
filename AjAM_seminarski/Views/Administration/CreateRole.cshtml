@model AjAM_seminarski.ViewModel.CreateRoleViewModel
@{ 
    ViewBag.Title = "Create New Role";
}


    <div class="container mb-5 mt-3">
    <h1>Create New Role</h1>

    <div class="row">
        <div class="col-md-12">
            <form method="post">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group col-lg-4">
                    <label asp-for="RoleName">Role Name</label>
                    <input asp-for="RoleName" class="form-control" placeholder="Enter new role..."/>
                    <span asp-validation-for="RoleName" class="text-danger"></span>
                <button type="submit" class="btn btn-primary mt-3">Create Role</button>
                </div>
            </form>
        </div>



    </div>
    </div>