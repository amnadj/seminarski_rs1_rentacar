@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewBag.Title = "All Roles";
}
    <div class="container">
        <h1>All Roles</h1>
        <a class="btn btn-primary mt-2 mb-2" style="width:auto" asp-controller="administration" asp-action="createrole">Create New Role</a>
        @if (Model.Any())
        {

            foreach (var role in Model)
            {
                <div class="card mb-2 mt-2">
                    <div class="card-header">
                        Role Id: @role.Id
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">
                            @role.Name
                        </h5>
                    </div>
                    <div class="card-footer">
                        <a class="btn btn-primary" asp-action="EditRole" asp-controller="administration" asp-route-id="@role.Id">Edit</a>
                        <a asp-action="RemoveRole" asp-controller="Administration" asp-route-Id="@role.Id" class="btn btn-outline-danger" >Remove</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="card">
                <div class="card-header">
                    No roles created yet.
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Use the button below to create a role
                    </h5>
                    <a class="btn btn-primary" style="width:auto" asp-controller="administration" asp-action="createrole">Create Role</a>
                </div>
            </div>
        }
    </div>